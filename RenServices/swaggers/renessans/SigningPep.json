                  "ENUM",
                  "TEXT",
                  "ATTACH_LINK",
                  "BOOLEAN",
                  "BYTE",
                  "SHORT",
                  "INTEGER",
                  "SPIN",
                  "LONG",
                  "DECIMAL",
                  "MONEY",
                  "CURRENCY",
                  "DATE",
                  "DATETIME",
                  "UUID",
                  "LIST",
                  "ATTRIBUTE"
