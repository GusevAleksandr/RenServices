{
  "definitions": {
    "TypesCLSchema": {
      "type": "string",
      "enum": [
        "INTEGER",
        "LONG",
        "DOUBLE",
        "STRING",
        "DATE",
        "BOOLEAN"
      ]
    },
    "SecurityPropertiesCLSchema": {
      "type": "string",
      "enum": [
        "login"
      ]
    },
    "FieldCLSchema": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/TypesCLSchema"
        }
      }
    },
    "ValueCLSchema": {
      "type": "object",
      "properties": {
        "constant": {
          "properties": {
            "value": {
              "type": "object"
            },
            "type": {
              "$ref": "#/definitions/TypesCLSchema"
            }
          }
        },
        "security-context": {
          "type": "object",
          "properties": {
            "property": {
              "$ref": "#/definitions/SecurityPropertiesCLSchema"
            }
          }
        },
        "field": {
          "$ref": "#/definitions/FieldCLSchema"
        }
      }
    },
    "LeftRightCLSchema": {
      "type": "object",
      "properties": {
        "left": {
          "$ref": "#/definitions/FieldCLSchema"
        },
        "right": {
          "$ref": "#/definitions/ValueCLSchema"
        }
      }
    },
    "NestedConditionCLSchema": {
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CommonLogic"
          }
        }
      }
    },
    "CommonLogic": {
      "type": "object",
      "required": [
      ],
      "properties": {
        "eq": {
          "$ref": "#/definitions/LeftRightCLSchema",
          "description": "условие равенства (==)"
        },
        "ge": {
          "$ref": "#/definitions/LeftRightCLSchema",
          "description": "условие больше или равно (>=)"
        },
        "gt": {
          "$ref": "#/definitions/LeftRightCLSchema",
          "description": "условие строго больше (>)"
        },
        "le": {
          "$ref": "#/definitions/LeftRightCLSchema",
          "description": "условие меньше или равно (<=)"
        },
        "lt": {
          "$ref": "#/definitions/LeftRightCLSchema",
          "description": "условие строго меньше (<)"
        },
        "between": {
          "properties": {
            "object": {
              "$ref": "#/definitions/FieldCLSchema"
            },
            "left": {
              "$ref": "#/definitions/ValueCLSchema"
            },
            "right": {
              "$ref": "#/definitions/ValueCLSchema"
            }
        },
        "like": {
          "$ref": "#/definitions/LeftRightCLSchema",
          "description": "условие поиска вхождения"
        },
        "ilike": {
          "$ref": "#/definitions/LeftRightCLSchema",
          "description": "условие поиска вхождения. Не зависит от регистра"
        },
        "and": {
          "$ref": "#/definitions/NestedConditionCLSchema",
          "description": "объединение условий (И)"
        },
        "or": {
          "$ref": "#/definitions/NestedConditionCLSchema",
          "description": "объединение условий (ИЛИ)"
        },
        "not": {
          "$ref": "#/definitions/CommonLogic",
          "description": "отрицание"
        }
      },
      "description": "расширенный фильтр в формате common-logic",
      "example": {
        "not": {
          "and": [
            {
              "eq": {
                "left": {
                  "field": {
                    "name": "testField"
                  }
                },
                "right": {
                  "constant": {
                    "value": "10",
                    "type": "LONG"
                  }
                }
              }
            },
            {
              "eq": {
                "left": {
                  "field": {
                    "name": "fieldFirst"
                  }
                },
                "right": {
                  "field": {
                    "name": "fieldSecond"
                  }
                }
              }
            },
            {
              "and": [
                {
                  "not": {
                    "eq": {
                      "left": {
                        "field": {
                          "name": "fieldFirst"
                        }
                      },
                      "right": {
                        "field": {
                          "name": "fieldSecond"
                        }
                      }
                    }
                  }
                },
                {
                  "in": {
                    "left": {
                      "field": {
                        "name": "inFieldName"
                      }
                    },
                    "right": [
                      {
                        "constant": {
                          "value": "inStringName"
                        }
                      },
                      {
                        "security-context": {
                          "property": "login"
                        }
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      }
    }
  }
}
}